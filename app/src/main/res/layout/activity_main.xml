<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView

        android:id="@+id/textView"
        android:layout_width="4500dp"
        android:layout_height="90dp"
        android:background="@color/green"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"

         />

    <TextView
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:layout_width="88dp"
        android:layout_height="43dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-thin"
        android:text=" Delivery Courier"
        android:textColor="#FFFFFF"
        app:drawableTint="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/shop_1"
        android:id="@+id/imageView3"
        android:layout_width="256dp"
        android:layout_height="330dp"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="184dp" />

    <TextView
        app:layout_constraintLeft_toLeftOf="@id/imageView3"
        app:layout_constraintRight_toRightOf="@id/imageView3"
        app:layout_constraintBottom_toBottomOf="@id/imageView3"
        android:id="@+id/textView3"
        android:textColor="@color/cardview_dark_background"
        android:layout_width="255dp"
        android:layout_height="154dp"
        android:background="#94FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:text="  Магазин Пятёрочка"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="378dp" />
    <TextView
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintLeft_toLeftOf="@id/imageView3"
        app:layout_constraintRight_toRightOf="@id/imageView3"
        app:layout_constraintBottom_toBottomOf="@id/imageView3"
        android:id="@+id/textView4"
        android:layout_width="255dp"
        android:layout_height="120dp"
        android:fontFamily="sans-serif-light"
        android:text="  ул. Молостовых, 9, корп. 1, Москва"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="378dp" />
    <TextView
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintLeft_toLeftOf="@id/imageView3"
        app:layout_constraintRight_toRightOf="@id/imageView3"
        app:layout_constraintBottom_toBottomOf="@id/imageView3"
        android:id="@+id/textView5"
        android:layout_width="255dp"
        android:layout_height="90dp"
        android:fontFamily="sans-serif-medium"
        android:text="  8:30 - 8:50"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="378dp" />

    <Button
        app:layout_constraintLeft_toLeftOf="@id/imageView3"
        app:layout_constraintBottom_toBottomOf="@id/imageView3"
        android:id="@+id/button1"
        android:layout_width="123dp"
        android:layout_height="59dp"
        android:fontFamily="sans-serif-light"
        android:text="ОТКЛОНИТЬ"
        android:textSize="12sp"
        app:backgroundTint="@color/red"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="475dp" />

    <Button
        app:layout_constraintRight_toRightOf="@id/imageView3"
        app:layout_constraintBottom_toBottomOf="@id/imageView3"
        android:id="@+id/button"
        android:layout_width="123dp"
        android:layout_height="59dp"
        android:fontFamily="sans-serif-light"
        android:text="ПРИНЯТЬ"
        android:textSize="12sp"
        app:backgroundTint="@color/green"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="475dp" />




</androidx.constraintlayout.widget.ConstraintLayout>